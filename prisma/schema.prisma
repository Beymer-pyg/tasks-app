generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum todoStatus {
  todo
  inprogress
  done
}

model Todos {
  id        String     @id @default(cuid())
  title     String
  status    todoStatus @default(todo)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
